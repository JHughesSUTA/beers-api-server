<div id="app">
  <h1>Add a Beer:</h1>
  <ul>
    <li v-for="error in errors">{{ error }}</li>
  </ul>
  <div>
    Name: <input type="text" v-model="newBeerName">
    Style: <input type="text" v-model="newBeerStyle">
    Alcohol Content: <input type="text" v-model="newBeerAlcohol">
    <button v-on:click="addBeer()">Add Beer</button>
  </div>
  <div>
    Search by name: <input type="text" v-model="nameFilter">
  </div>
  <div>
    Search by style: <input type="text" v-model="styleFilter">
  </div>
  
  <div>
    <table border=1 width=100%>
      <tr>
        <th v-on:click="setSortAttribute('name')">Name</th>
        <th v-on:click="setSortAttribute('style')">Style</th>
        <th>Alcohol Content</th>
      </tr>
      <tbody name="fade" is="transition-group">
        <tr v-for="beer in filteredBeers" v-bind:key="beer.id">
          <td>{{ beer.name }}</td>
          <td>{{ beer.style }}</td>
          <td>{{ beer.alcohol_content }}</td>
        </tr>
      </transition-group>
    </table>
  </div>
  
